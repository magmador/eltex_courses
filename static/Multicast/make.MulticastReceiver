CFLAGS =
CC = gcc
SOURCES = MulticastReceiver.c
OBJECTS = $(SOURCES:.c=.o)
EXECUTABLE =  MulticastReceiver

all: exec

debug: CFLAGS += -g3
debug: clean
debug: exec

exec: $(OBJECTS)
	$(CC) $(OBJECTS) -o $(EXECUTABLE) $(CFLAGS)

.PHONY: clean
clean:
	rm $(EXECUTABLE) $(OBJECTS)

$(EXECUTABLE): $(OBJECTS)
	$(CC) $(CFLAGS) -c $(OBJECTS) $@
